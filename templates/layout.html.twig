<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}EOS{% endblock %}</title>
        {% block stylesheets %}
            {# Libs #}
            <link rel="stylesheet" href="{{ asset('lib/bootstrap/bootstrap.min.css')}}">
            <link rel="stylesheet" href="{{ asset('lib/bootstrap/bootstrap-grid.min.css')}}">
            <link rel="stylesheet" href="{{ asset('lib/bootstrap/bootstrap-reboot.min.css')}}">
            <link rel="stylesheet" href="{{ asset('lib/ddsmoothmenu/ddsmoothmenu.css')}}">
            <link rel="stylesheet" href="{{ asset('lib/datatables/datatables.min.css')}}">
            <link rel="stylesheet" href="{{ asset('lib/fontawesome/css/all.css')}}">
            <link rel="stylesheet" href="{{ asset('lib/jquery-ui/jquery-ui.css')}}">

            {# App #}
            <link rel="stylesheet" href="{{ asset('css/app.css')}}">
            <link rel="stylesheet" href="{{ asset('css/app_' ~ instanceCode  ~ '.css')}}">
        {% endblock %}
    </head>
    <body>
        <header>
            {% block headers %}
                <div class=" eos-header">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="{{ asset('images/logo/logo_application.png') }}"/>
                        </div>
                        <div class="col-md-4">

                        </div>
                        <div class="col-md-4">
                            <img src="{{ asset('images/logo/logo_' ~ instanceCode  ~ '.png') }}" class="logo-region float-right"/>
                        </div>
                    </div>
                    {% block navigation %}{% endblock %}
                </div>
            {% endblock %}
            {% block breadcrumb %}{% endblock %}
        </header>
        <main role="main" class="container-fluid">
            {% block body %}{% endblock %}
        </main>
        <footer class="footer">
        {% block footer %}
            <div class="container-fluid text-left">
                <div class="col col-12">
                    Application EOS - V{{ eosVersion }} - Serveur {{ eosSide }} - <a href="#" onclick="window.open('/eos/src/_docs/giraf_contact.pdf', 'contact', 'toolbar=no,status=no,width=650 ,height=600,scrollbars=yes,location=no,resize=yes,menubar=yes')" style="color: #FFFFFF">Contact</a>&nbsp;-&nbsp;<a href="#" onclick="window.open('../_docs/giraf_mentions_legales.pdf', 'contact', 'toolbar=no,status=no,width=650 ,height=600,scrollbars=yes,location=no,resize=yes,menubar=yes')" style="color: #FFFFFF">Mentions l&eacute;gales</a>
                </div>
            </div>
        {%  endblock  %}
        </footer>
        {% block javascripts %}
            {# Libs #}
            <script src="{{ asset('lib/jquery-3.5.1.min.js')}}"></script>
            <script src="{{ asset('lib/jquery-ui/jquery-ui.min.js')}}"></script>
            <script src="{{ asset('lib/propper/propper.min.js')}}"></script>
            <script src="{{ asset('lib/bootstrap/bootstrap.min.js')}}"></script>
            <script src="{{ asset('lib/bootstrap/bootstrap.bundle.min.js')}}"></script>
            <script src="{{ asset('lib/ddsmoothmenu/ddsmoothmenu.js')}}"></script>
            <script src="{{ asset('lib/datatables/datatables.min.js')}}"></script>
            <script src="{{ asset('lib/moment/moment.min.js')}}"></script>
            <script src="{{ asset('lib/fontawesome/js/all.js')}}"></script>

            {# App #}
            <script src="{{ asset('js/app.js')}}"></script>
            <script src="{{ asset('js/app_' ~ instanceCode  ~ '.js')}}"></script>
        {% endblock %}
    </body>
</html>
