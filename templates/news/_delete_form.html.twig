<form method="post" action="{{ path('news_delete', {'id': news.newsId}) }}" onsubmit="return confirm('Voulez-vous supprimer la news ? Cette action est irreversible');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ news.newsId) }}">
    <button class="btn btn-danger">Supression</button>
</form>
